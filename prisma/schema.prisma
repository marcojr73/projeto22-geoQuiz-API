generator client {
  provider = "prisma-client-js"
}

model users {
  id                        Int                 @id @default(autoincrement())
  name                      String
  email                     String              @unique
  picture                   String              @default("http://neoleader.com.br/wp-content/uploads/2015/05/geral_adulto-300x300.png")
  password                  String
  hits                      Int                 @default(0)
  mistakes                  Int                 @default(0)
  createdAt                 DateTime            @default(now())
  gameScore                 gameScore[]
}

model gameScore {
  id                        Int                 @id @default(autoincrement())
  userId                    Int
  users                     users               @relation(fields: [userId], references: [id])
  ponctuation               Int                 @default(0)
  createdAt                 DateTime            @default(now())
}

model capitalsQuiz {
  id                        Int                 @id @default(autoincrement())
  country                   String              @unique
  capital                   String
  cityTwo                   String
  cityThree                 String
  cityFour                  String
  cityFive                  String
  levelId                   Int
  levels                    levels              @relation(fields: [levelId], references: [id])
  createdAt                 DateTime            @default(now())
}

model territoriesQuiz {
  id                        Int                 @id @default(autoincrement())
  name                      String
  country                   String              @unique
  options                   String[]
  levelId                   Int
  levels                    levels              @relation(fields: [levelId], references: [id])
  createdAt                 DateTime            @default(now())
}

model flagsQuiz {
  id                        Int                 @id @default(autoincrement())
  country                   String              @unique
  flag                      String
  levelId                   Int
  levels                    levels              @relation(fields: [levelId], references: [id])
  createdAt                 DateTime            @default(now())
}

model levels {
  id                        Int                 @id @default(autoincrement())
  level                     String              @unique
  createdAt                 DateTime            @default(now())
  capitalsQuiz              capitalsQuiz[]
  territoriesQuiz           territoriesQuiz[]
  flagsQuiz                 flagsQuiz[]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
